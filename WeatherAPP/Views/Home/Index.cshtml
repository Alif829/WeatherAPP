@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta charset="UTF-8">
    <title>Weather App</title>
    <style>
        /* Add some basic styling to the page */
        body {
            font-family: sans-serif;
            text-align: center;
        }

        h1 {
            margin-top: 50px;
        }

        #weather-info {
            margin-top: 50px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .weather-card {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 300px;
        }

            .weather-card h2 {
                margin-top: 0;
            }
    </style>
</head>
<body>
<div class="text-center">
   
        <h1>Weather App</h1>
        <input type="text" id="city-input" placeholder="Enter city name...">
        <button id="get-weather-btn">Get Weather</button>
        <div id="weather-info"></div>

        <!-- Include jQuery library -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(function () {
                // Attach a click event handler to the "Get Weather" button
                $('#get-weather-btn').on('click', function () {
                    // Get the value of the city input field
                    var city = $('#city-input').val();
                    // Construct the URL for the API endpoint
                    var apiUrl = '/api/weather/' + city;

                    // Send an AJAX request to the API endpoint
                    $.get(apiUrl, function (data) {
                        // If the request was successful, update the page with the weather data
                        var weatherHtml = '<div class="weather-card"><h2>' + data.city + '</h2><p>Temperature: ' + data.temperature + '°C</p><p>Description: ' + data.description + '</p></div>';
                        $('#weather-info').html(weatherHtml);
                    }).fail(function (xhr) {
                        // If the request failed, display an error message on the page
                        $('#weather-info').html('<p>' + xhr.status + ': ' + xhr.statusText + '</p>');
                    });
                });
            });
        </script>
        </div>
    </body>
</html>

</div>
